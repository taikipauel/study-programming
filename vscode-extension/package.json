{
  "name": "study-programming-extension",
  "displayName": "Study Programming",
  "description": "VS Code helper extension for study-programming workspace.",
  "publisher": "study-programming",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:studyProgramming.rewrite",
    "onCommand:studyProgramming.clarify",
    "onCommand:studyProgramming.summarize",
    "onCommand:studyProgramming.explain",
    "onCommand:studyProgramming.termsHarmonize",
    "onCommand:studyProgramming.citationSafeRewrite",
    "onCommand:studyProgramming.pickModel",
    "onView:studyProgramming.history"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "studyProgramming.rewrite",
        "title": "Study Programming: Rewrite Selection"
      },
      {
        "command": "studyProgramming.clarify",
        "title": "Study Programming: Clarify Selection"
      },
      {
        "command": "studyProgramming.summarize",
        "title": "Study Programming: Summarize Selection"
      },
      {
        "command": "studyProgramming.explain",
        "title": "Study Programming: Explain Selection"
      },
      {
        "command": "studyProgramming.termsHarmonize",
        "title": "Study Programming: Harmonize Terms"
      },
      {
        "command": "studyProgramming.citationSafeRewrite",
        "title": "Study Programming: Citation-safe Rewrite"
      },
      {
        "command": "studyProgramming.pickModel",
        "title": "Study Programming: Pick Model"
      },
      {
        "command": "studyProgramming.history.clear",
        "title": "Study Programming: Clear History"
      }
    ],
    "configuration": {
      "title": "Study Programming",
      "properties": {
        "studyProgramming.provider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "custom"
          ],
          "default": "openai",
          "markdownDescription": "Which provider to use for completions. Options include `openai`, `anthropic`, or a `custom` provider defined in config/providers.json.",
          "scope": "application",
          "order": 1
        },
        "studyProgramming.model": {
          "type": "string",
          "enum": [
            "gpt-4o-mini",
            "claude-3-haiku",
            "custom-model"
          ],
          "default": "gpt-4o-mini",
          "markdownDescription": "Default model identifier for the selected provider. Align this with entries in config/providers.json.",
          "scope": "application",
          "order": 2
        },
        "studyProgramming.tokenLimit": {
          "type": "number",
          "default": 4096,
          "markdownDescription": "Maximum tokens to request per completion.",
          "minimum": 1,
          "scope": "application",
          "order": 3
        },
        "studyProgramming.costCapUSD": {
          "type": "number",
          "default": 20,
          "markdownDescription": "Optional soft cost cap in USD for the current workspace.",
          "minimum": 0,
          "scope": "application",
          "order": 4
        },
        "studyProgramming.streaming": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Toggle streaming responses on or off for chat completions.",
          "scope": "application",
          "order": 5
        },
        "studyProgramming.telemetry": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Opt in to anonymized telemetry to help improve the extension.",
          "scope": "application",
          "order": 6
        },
        "studyProgramming.loggingLevel": {
          "type": "string",
          "enum": [
            "off",
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "error",
          "markdownDescription": "Controls the verbosity of extension logging. Defaults to error-only to avoid emitting sensitive data.",
          "scope": "application",
          "order": 7
        },
        "studyProgramming.logIncludeResponseBody": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Include response bodies in logs (may contain sensitive data). Keep off unless explicitly needed.",
          "scope": "application",
          "order": 8
        },
        "studyProgramming.logRedactPii": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Redact emails and IDs from logged content.",
          "scope": "application",
          "order": 9
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "studyProgramming.history",
          "name": "Study Programming History"
        }
      ]
    }
  },
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.1",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.4.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "ws": "^8.18.3",
    "yup": "^1.6.1",
    "zod": "^3.25.76"
  }
}
